:80 {
    reverse_proxy /api/* http://localhost:8080  {
            trusted_proxies 0.0.0.0/0
        }
    reverse_proxy /.well-known/* http://localhost:8080  {
            trusted_proxies 0.0.0.0/0
        }
    reverse_proxy /* http://localhost:3000  {
            trusted_proxies 0.0.0.0/0
        }

    log {
        output file /var/log/caddy/access.log
        level WARN
    }
}