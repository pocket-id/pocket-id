{{ define "base" }}
    <div class="header" style="display: flex; margin-bottom: 24px;">
        <div class="logo" style="display: flex; align-items: center;">
            <img src="{{ .LogoURL }}" alt="{{ .AppName }}" width="32" height="32" style="width: 32px; height: 32px; max-width: 32px; vertical-align: middle;"/>
            <h1 style="font-size: 1.5rem; font-weight: bold; display: inline-block; vertical-align: middle; margin-left: 8px; margin: 0 0 0 8px; padding: 0; border: 0; font-family: Arial, sans-serif; line-height: 1.5;">{{ .AppName }}</h1>
        </div>
    </div>
    <div class="content" style="background-color: #fafafa; padding: 24px; border-radius: 10px;">
        <h2 style="font-size: 1.25rem; font-weight: bold; margin-bottom: 16px; margin: 0 0 16px 0; padding: 0; border: 0; font-family: Arial, sans-serif; line-height: 1.5;">Login Code</h2>
        <p class="message" style="font-size: 1rem; line-height: 1.5; margin-top: 16px; margin: 16px 0 0 0; padding: 0; border: 0; font-family: Arial, sans-serif;">
            Click the button below to sign in to {{ .AppName }} with a login code.<br/>Or visit <a href="{{ .Data.LoginLink }}" style="color: #333; text-decoration: underline;">{{ .Data.LoginLink }}</a> and enter the code <strong>{{ .Data.Code }}</strong>.<br/><br/>This code expires in {{.Data.ExpirationString}}.
        </p>
        <div class="button-container" style="text-align: center;">
            <a class="button" href="{{ .Data.LoginLinkWithCode }}" style="background-color: #000000; color: #ffffff; padding: 0.7rem 1.5rem; text-decoration: none; border-radius: 4px; font-size: 1rem; font-weight: 500; display: inline-block; margin-top: 24px; font-family: Arial, sans-serif;">Sign In</a>
        </div>
    </div>
{{ end }}