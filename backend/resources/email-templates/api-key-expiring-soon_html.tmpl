{{ define "base" }}
    <div class="header" style="display: flex; margin-bottom: 24px;">
        <div class="logo" style="display: flex; align-items: center;">
            <img src="{{ .LogoURL }}" alt="{{ .AppName }}" width="32" height="32" style="width: 32px; height: 32px; max-width: 32px; vertical-align: middle;"/>
            <h1 style="font-size: 1.5rem; font-weight: bold; display: inline-block; vertical-align: middle; margin-left: 8px; margin: 0 0 0 8px; padding: 0; border: 0; font-family: Arial, sans-serif; line-height: 1.5;">{{ .AppName }}</h1>
        </div>
        <div class="warning" style="background-color: #ffd966; color: #7f6000; padding: 4px 12px; border-radius: 50px; font-size: 0.875rem; margin: auto 0 auto auto; font-family: Arial, sans-serif;">Warning</div>
    </div>
    <div class="content" style="background-color: #fafafa; padding: 24px; border-radius: 10px;">
        <h2 style="font-size: 1.25rem; font-weight: bold; margin-bottom: 16px; margin: 0 0 16px 0; padding: 0; border: 0; font-family: Arial, sans-serif; line-height: 1.5;">API Key Expiring Soon</h2>
        <p style="margin: 0; padding: 0; border: 0; font-family: Arial, sans-serif; line-height: 1.5;">
            Hello {{ .Data.Name }},<br/><br/>
            This is a reminder that your API key <strong>{{ .Data.ApiKeyName }}</strong> will expire on <strong>{{ .Data.ExpiresAt.Format "2006-01-02 15:04:05 MST" }}</strong>.<br/><br/>
            Please generate a new API key if you need continued access.
        </p>
    </div>
{{ end }}